<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MypageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30sp"
        android:paddingTop="10sp"
        android:paddingRight="30sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/mypage" />

            <Space
                android:layout_width="20sp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/myinfoeditBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_gravity="right"
                    android:backgroundTint="#00FFFFFF"
                    android:padding="0dp"
                    android:paddingTop="0dp"
                    android:text="내 정보 수정 >"
                    android:textColor="#586F7C"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홍길동"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/roleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="(role)" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="example@google.com" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="80sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/guardian_interlock_Enterbtn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:backgroundTint="#fcfcfe"
                android:drawableLeft="@drawable/fluent_guardian_20_filled"
                android:text="보호자 연동"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:backgroundTint="@color/material_dynamic_neutral100"
                app:rippleColor="?attr/colorControlHighlight" />

            <Button
                android:id="@+id/emergencyContactEnterBtn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:backgroundTint="#fcfcfe"
                android:drawableLeft="@drawable/bxs_contact"
                android:text="긴급연락처 관리"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:rippleColor="?attr/colorControlHighlight" />

            <Button
                android:id="@+id/connectionManagementEnterBtn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:backgroundTint="#fcfcfe"
                android:drawableLeft="@drawable/ep_connection"
                android:text="지팡이 연결 관리"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:rippleColor="?attr/colorControlHighlight" />

            <Button
                android:id="@+id/helpBtn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:backgroundTint="#fcfcfe"
                android:drawableLeft="@drawable/mingcute_question_fill"
                android:text="도움말"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:rippleColor="?attr/colorControlHighlight" />

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:backgroundTint="#fcfcfe"
                android:drawableLeft="@drawable/logout"
                android:text="로그아웃"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:rippleColor="?attr/colorControlHighlight" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>